apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ cloudflare_cluster_issuer }}
spec:
  acme:
    email: {{ cluster_vars.service.postfix.user.alias }}
    privateKeySecretRef:
      name: {{ cloudflare_vars.kubernetes.gateway.cluster.issuer.key.prefix }}-key
    server: {{ cloudflare_acme_server_url }}
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              key: {{ cloudflare_vars.kubernetes.secret.key }}
              name: {{ cloudflare_vars.kubernetes.secret.name }}
